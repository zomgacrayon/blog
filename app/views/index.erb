<div class="container">
  <table>
    <tr>
      <td style="width:40%"><b> Title </td>
    </tr>
    <%@posts.each do |post|%>
    <tr>
      <td><%=post.title%></td>
      <td><p><a href = "/posts/<%= post.id %>"> View</a></p></td>
      <td><p><a href = "/posts/<%= post.id %>/edit"> Edit</a></p></td>
      <td><form action="/posts/<%= post.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit">Delete</button>
        </form>
        </td>
      <%end%>
  </table>
</div>